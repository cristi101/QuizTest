            android:textSize="@dimen/title_size" />

        <!-- This starts a multi choice question -->
        <eu.baboi.cristian.quiztest.MultiChoiceQuestion style="@style/group">

            <!-- This is the question -->
            <eu.baboi.cristian.quiztest.Question
                style="@style/question"
                android:text="@string/q1" />

            <!-- This question possible answers follow  -->
            <eu.baboi.cristian.quiztest.MultiChoice
                style="@style/multiChoice"
                android:checked="true"
                android:text="@string/q1a1"
