<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <!-- Text selection color -->
        <item name="android:textColorHighlight">@android:color/holo_blue_light</item>
    </style>

    <style name="scroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>

    <!--
     Background textures from http://www.fuzzimo.com/about
     http://www.fuzzimo.com/free-seamless-denim-jeans-textures/
     http://www.fuzzimo.com/free-hi-res-canvas-textures-seamless/
    -->
    <style name="quiz">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bkgd_tile</item>
    </style>

    <style name="group">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/group_margin</item>
        <item name="android:background">@drawable/question_frame</item>
        <item name="android:padding">@dimen/group_padding</item>
    </style>

    <style name="question">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/question_size</item>
        <item name="android:padding">@dimen/question_padding</item>
        <item name="android:layout_marginBottom">@dimen/question_margin</item>
        <item name="android:background">@drawable/question_background</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="answer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:text">@string/button</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/button</item>
    </style>
</resources>
