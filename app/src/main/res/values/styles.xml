<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Text selection color -->
        <item name="android:textColorHighlight">@android:color/holo_blue_light</item>
    </style>

    <style name="scroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="quiz">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bkgd_tile</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="group">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/group_margin</item>
        <item name="android:background">@drawable/question_frame</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/group_padding</item>
    </style>

    <!-- SANTIER -->
    <style name="question">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/question_size</item>
        <item name="android:padding">@dimen/question_padding</item>
        <item name="android:layout_marginBottom">@dimen/question_margin</item>
        <item name="android:background">@drawable/question_background</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>

        <item name="android:imeOptions">actionNext</item>
        <item name="android:imeActionLabel">Ceva</item>
        <item name="android:imeActionId">5</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible|adjustPan</item>


    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">20</item>

        <item name="android:imeOptions">actionNext</item>
        <item name="android:imeActionLabel">Ceva</item>
        <item name="android:imeActionId">5</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible|adjustPan</item>

    </style>

    <style name="oneChoice">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>

        <item name="android:imeOptions">actionNext</item>
        <item name="android:imeActionLabel">Ceva</item>
        <item name="android:imeActionId">5</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible|adjustPan</item>

    </style>

    <style name="multiChoice">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>

        <item name="android:imeOptions">actionNext</item>
        <item name="android:imeActionLabel">Ceva</item>
        <item name="android:imeActionId">5</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible|adjustPan</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:text">@string/button</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/button</item>

        <item name="android:imeOptions">actionNext</item>
        <item name="android:imeActionLabel">Ceva</item>
        <item name="android:imeActionId">5</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible|adjustPan</item>
    </style>
</resources>
